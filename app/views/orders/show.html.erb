<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>


    <div class="panel panel-default products">
      <table class="table table-bordered">
        <thead>
          <tr>
          <th colspan="3"><h4>Order Summary</h4></th>
          </tr>
          <tr>
            <th>Item#</th>
            <th></th>
            <th colspan="1">Item Name and Description</th>
            <th>Quantity</th>
            <th>Item Total</th>
          </tr>
        </thead>
        <tbody>
          <% @order.line_items.each_with_index do |item, index| %>
            <%= render 'item', item: item , index: index%>
          <% end %>
        </tbody>
        <tr>
          <th colspan="3">Order Details:</th>
          <th>HST:</th>
          <td><%= number_to_currency((@order.total_cents * 0.01) * 0.13) %></td>
        </tr>
        <tr>
          <td colspan="2">Email:</td>
          <td><%= @order.email %></td>
          <th>Total:</td>
          <td><%= number_to_currency(@order.total_cents * 0.01) %></td>
        </tr>
      </table>
    </div>

  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
