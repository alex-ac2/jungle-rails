<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
        <dl class="dl-horizontal">
          <dt>Write a review</dt>
          <dd>
            <%= form_for([@product, Review.new]) do |f| %>
              <%= f.select :rating, [1, 2, 3, 4, 5], prompt: "Rating" %><br>
              <%= f.text_area :description, size: "45" %><br>
              <%= f.submit "Create" %>
            <% end %>
          </dd>
        </dl>
        <br>
        <br>
        <dl class="dl-horizontal">
        <dt>Customer Reviews:</dt>
        <dd> 
          <% @product.reviews.each do |item| %>
            <%= render 'review', item: item %>
          <% end %>
        </dd>
        </dl>
      </div>
    </div>

  </article>

</section>
